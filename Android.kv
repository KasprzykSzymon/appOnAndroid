WidgetsExample:

<WidgetsExample>:
    cols: 3
    Button:
        text: "My button"
        on_press: root.on_button_click()
    Label:
        text: root.my_text


<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top,center
    anchor_y: "bottom"
    Button:
        text:"aaa"
        size_hint: .1,  .1
    # Button:
     #   text:"bbb"
     #   size_hint: .1,  .1

<BoxLayoutExample>:
    orientation: "vertical"
    Button:
        text: "And"
        size_hint: .5, None
        height: "100dp"
    #    size: "100dp", "100dp"
        pos_hint: { "center_x": .5 }

    Button:
        text: "Box"


<MainWidget>:
    Button:
        size: "100dp", "100dp"
        pos: "100dp","200dp"
        color: 0, 0, 1, 1
    Button:
        size: "100dp", "100dp"
        pos: "200dp","300dp"
        color: 1, 0, 0, 1